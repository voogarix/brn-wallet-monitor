{
  "name": "brn-wallet-monitor",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "electron-start": "electron . --disable-gpu",
    "dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && npm run electron-start\""
},
  "dependencies": {
    "chart.js": "^3.7.0",
    "electron": "^21.0.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "electron-builder": "^23.6.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.brn.walletmonitor",
    "productName": "BRN Wallet Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "build/**/*"
    ]
  }
}
